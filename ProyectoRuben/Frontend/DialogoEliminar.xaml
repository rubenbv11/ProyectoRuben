<Window x:Class="ProyectoRuben.Frontend.Dialogos.DialogoEliminar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmar Eliminación" Height="200" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">

    <Border BorderBrush="Red" BorderThickness="2" Background="White">
        <StackPanel Margin="20">
            <TextBlock Text="⚠ ZONA DE PELIGRO" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"/>
            <TextBlock Text="Esta acción es irreversible." HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock Text="Escribe 'eliminar' para confirmar:" Margin="0,5,0,5"/>

            <TextBox x:Name="txtConfirmacion" 
                     TextChanged="txtConfirmacion_TextChanged" 
                     BorderBrush="Gray" BorderThickness="1" Padding="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Cancelar" Click="BtnCancelar_Click" Margin="0,0,10,0" Width="97"/>
                <Button x:Name="btnEliminar" Content="ELIMINAR" Click="BtnEliminar_Click" 
                        Background="Red" Foreground="White" IsEnabled="False" Width="99"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>