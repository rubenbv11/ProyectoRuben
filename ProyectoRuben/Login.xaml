<Window x:Class="ProyectoRuben.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="450" Width="800"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">

    <Grid>

        <!-- Lado izquierdo con colores del tema -->
        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="10,0,0,10">
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource SecondaryColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>
        </Border>

        <!-- Panel del formulario -->
        <Border Width="400" Height="400" CornerRadius="10"
                Background="White"
                Effect="{StaticResource DropShadow}">
            <Grid>

                <Button x:Name="btnCerrar" Content="✕"
                        Width="30" Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="10"
                        Background="Transparent"
                        Foreground="Gray"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCerrar_Click"/>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Image Source="/logo.png"
                           Width="170" Height="92" Margin="0,0,0,20"/>

                    <TextBlock Text="Usuario" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsuario" Width="250" Height="30" Margin="0,0,0,15" Padding="5" Style="{StaticResource MaterialDesignFilledTextBox}"/>

                    <TextBlock Text="Contraseña" FontSize="14" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword" Width="250" Height="30" Margin="0,0,0,15" Padding="5" Style="{StaticResource MaterialDesignFilledRevealPasswordBox}"/>

                    <!-- Botón usando tu estilo del tema -->
                    <Button x:Name="btnLogin"
                            Content="Iniciar Sesión"
                            Height="40"
                            Style="{StaticResource PrimaryButton}"
                            Click="btnLogin_Click" />

                    <TextBlock x:Name="txtMensaje"
                               Foreground="{StaticResource ErrorBrush}"
                               TextAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
