<Window x:Class="ProyectoRuben.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Peluquería Charo - Sistema de Gestión"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Estilo para los botones del menú -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Estilo para las tarjetas -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================================ -->
        <!-- PANEL LATERAL (MENÚ) -->
        <!-- ================================ -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                    <GradientStop Color="{StaticResource SecondaryColor}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Row="0" Margin="0,20,0,30">
                    <Image Source="/logo.png" Width="120" Height="65" Margin="0,0,0,15"/>
                    <TextBlock Text="Peluquería Charo" FontSize="18" FontWeight="Bold" 
                              Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sistema de Gestión" FontSize="12" Foreground="#EEEEEE" 
                              HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Menú Principal con Expanders -->
                <StackPanel Grid.Row="1">
                    <!-- Dashboard (siempre visible) -->
                    <Button x:Name="btnDashboard" Content="Dashboard" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="btnDashboard_Click"/>

                    <Rectangle Height="1" Fill="#44FFFFFF" Margin="20,10"/>

                    <!-- Expander: Gestión Diaria -->
                    <Expander IsExpanded="True" Background="Transparent" Foreground="White" Padding="10,5">
                        <Expander.Header>
                            <TextBlock Text="Gestión Diaria" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        </Expander.Header>
                        <StackPanel>
                            <Button x:Name="btnReservas" Content="Reservas" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnReservas_Click"/>
                            <Button x:Name="btnClientes" Content="Clientes" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnClientes_Click"/>
                        </StackPanel>
                    </Expander>

                    <Rectangle Height="1" Fill="#44FFFFFF" Margin="20,5"/>

                    <!-- Expander: Catálogo -->
                    <Expander IsExpanded="True" Background="Transparent" Foreground="White" Padding="10,5">
                        <Expander.Header>
                            <TextBlock Text="Catálogo" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        </Expander.Header>
                        <StackPanel>
                            <Button x:Name="btnServicios" Content="Servicios" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnServicios_Click"/>
                            <Button x:Name="btnProductos" Content="Productos" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnProductos_Click"/>
                        </StackPanel>
                    </Expander>

                    <Rectangle Height="1" Fill="#44FFFFFF" Margin="20,5"/>

                    <!-- Expander: Finanzas -->
                    <Expander IsExpanded="False" Background="Transparent" Foreground="White" Padding="10,5">
                        <Expander.Header>
                            <TextBlock Text="Finanzas" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        </Expander.Header>
                        <StackPanel>
                            <Button x:Name="btnFacturacion" Content="Facturación" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnFacturacion_Click"/>
                            <Button x:Name="btnReportes" Content="Reportes" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnReportes_Click"/>
                        </StackPanel>
                    </Expander>

                    <Rectangle Height="1" Fill="#44FFFFFF" Margin="20,5"/>

                    <!-- Expander: Inventario -->
                    <Expander IsExpanded="False" Background="Transparent" Foreground="White" Padding="10,5">
                        <Expander.Header>
                            <TextBlock Text="Inventario" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        </Expander.Header>
                        <StackPanel>
                            <Button x:Name="btnInventario" Content="Control Stock" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnInventario_Click"/>
                        </StackPanel>
                    </Expander>

                    <Rectangle Height="1" Fill="#44FFFFFF" Margin="20,5"/>

                    <!-- Expander: Administración -->
                    <Expander IsExpanded="False" Background="Transparent" Foreground="White" Padding="10,5">
                        <Expander.Header>
                            <TextBlock Text="Administración" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        </Expander.Header>
                        <StackPanel>
                            <Button x:Name="btnEmpleados" Content="Empleados" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnEmpleados_Click"/>
                            <Button x:Name="btnConfiguracion" Content="Configuración" 
                                   Style="{StaticResource MenuButtonStyle}" 
                                   Margin="15,0,0,0" Click="btnConfiguracion_Click"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>

                <!-- Usuario y Cerrar Sesión -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Rectangle Height="1" Fill="#44FFFFFF" Margin="20,0,20,10"/>

                    <!-- Info Usuario -->
                    <Border Background="#33FFFFFF" CornerRadius="8" Padding="15,10" Margin="15,0,15,10">
                        <StackPanel>
                            <TextBlock x:Name="txtUsuarioNombre" Text="Administrador" 
                                      FontWeight="Bold" Foreground="White" FontSize="14"/>
                            <TextBlock x:Name="txtUsuarioRol" Text="Admin" 
                                      Foreground="#EEEEEE" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Botón Cerrar Sesión -->
                    <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" 
                           Style="{StaticResource MenuButtonStyle}" 
                           Click="btnCerrarSesion_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================================ -->
        <!-- CONTENIDO PRINCIPAL -->
        <!-- ================================ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra Superior -->
            <Border Grid.Row="0" Background="White">
                <Grid>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="30,0,0,0">
                        <TextBlock x:Name="txtTituloPagina" Text="Dashboard" FontSize="24" 
                                  FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock x:Name="txtFechaHora" Text="Hoy, 24 de Noviembre 2025" 
                                  FontSize="14" Foreground="#666666" 
                                  VerticalAlignment="Bottom" Margin="20,0,0,3"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" 
                               HorizontalAlignment="Right" Margin="0,0,30,0">
                        <!-- Minimizar -->
                        <Button x:Name="btnMinimizar" Content="─" Width="40" Height="40" 
                               Background="Transparent" BorderThickness="0" Cursor="Hand" 
                               FontSize="16" Foreground="#666666" Margin="0,0,5,0"
                               Click="btnMinimizar_Click"/>

                        <!-- Maximizar/Restaurar -->
                        <Button x:Name="btnMaximizar" Content="□" Width="40" Height="40" 
                               Background="Transparent" BorderThickness="0" Cursor="Hand" 
                               FontSize="16" Foreground="#666666" Margin="0,0,5,0"
                               Click="btnMaximizar_Click"/>

                        <!-- Cerrar -->
                        <Button x:Name="btnCerrar" Content="✕" Width="40" Height="40" 
                               Background="Transparent" BorderThickness="0" Cursor="Hand" 
                               FontSize="16" Foreground="#666666" 
                               Click="btnCerrar_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Área de Contenido -->
            <Grid x:Name="MainContentArea" Grid.Row="1" Margin="20">
                <StackPanel x:Name="DashboardContent">
                    <!-- Fila de estadísticas -->
                    <Grid Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tarjeta 1: Reservas Hoy -->
                        <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Reservas Hoy" FontSize="14" Foreground="#666666"/>
                                <TextBlock x:Name="txtReservasHoy" Text="12" FontSize="32" 
                                          FontWeight="Bold" Foreground="{StaticResource AccentBrush}" 
                                          Margin="0,10,0,0"/>
                                <TextBlock Text="+3 desde ayer" FontSize="12" Foreground="Green" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tarjeta 2: Clientes Atendidos -->
                        <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Clientes Atendidos" FontSize="14" Foreground="#666666"/>
                                <TextBlock x:Name="txtClientesAtendidos" Text="245" FontSize="32" 
                                          FontWeight="Bold" Foreground="{StaticResource AccentBrush}" 
                                          Margin="0,10,0,0"/>
                                <TextBlock Text="Este mes" FontSize="12" Foreground="#666666" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tarjeta 3: Ingresos del Día -->
                        <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Ingresos Hoy" FontSize="14" Foreground="#666666"/>
                                <TextBlock x:Name="txtIngresosHoy" Text="€850,00" FontSize="32" 
                                          FontWeight="Bold" Foreground="{StaticResource AccentBrush}" 
                                          Margin="0,10,0,0"/>
                                <TextBlock Text="+15% vs promedio" FontSize="12" Foreground="Green" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tarjeta 4: Productos Bajo Stock -->
                        <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Stock Bajo" FontSize="14" Foreground="#666666"/>
                                <TextBlock x:Name="txtProductosBajoStock" Text="8" FontSize="32" 
                                          FontWeight="Bold" Foreground="Orange" 
                                          Margin="0,10,0,0"/>
                                <TextBlock Text="Requieren atención" FontSize="12" Foreground="Orange" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Próximas Citas -->
                    <Border Style="{StaticResource StatCardStyle}" Margin="10,0">
                        <StackPanel>
                            <TextBlock Text="Próximas Citas del Día" FontSize="18" 
                                      FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" 
                                      Margin="0,0,0,15"/>

                            <DataGrid x:Name="dgProximasCitas" 
                                     AutoGenerateColumns="False" 
                                     IsReadOnly="True" 
                                     HeadersVisibility="Column" 
                                     GridLinesVisibility="None" 
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     RowHeight="40">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="80"/>
                                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
                                    <DataGridTextColumn Header="Servicio" Binding="{Binding Servicio}" Width="*"/>
                                    <DataGridTextColumn Header="Empleado" Binding="{Binding Empleado}" Width="*"/>
                                    <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>